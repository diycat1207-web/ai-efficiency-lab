---
layout: layout.njk
---

<article class="post">
  <header class="post-header">
    <div class="post-hero-image" style="margin-bottom: 2rem; border-radius: 12px; overflow: hidden; box-shadow: 0 0 30px rgba(125, 95, 255, 0.2);">
      <img src="https://picsum.photos/seed/{{ date | isoDate }}/1200/600?grayscale&blur=2" alt="{{ title }}" style="width: 100%; height: auto; display: block;">
    </div>
    <div class="post-meta">
      <time datetime="{{ date | isoDate }}">{{ date | dateFormat }}</time>
      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          {% if tag !== "posts" %}
          <span class="tag">#{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
    <h1 class="post-title">{{ title }}</h1>
    {% if description %}
    <p class="post-description">{{ description }}</p>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    <a href="{{ '/' | url }}" class="back-link">← 記事一覧に戻る</a>
  </footer>
</article>
